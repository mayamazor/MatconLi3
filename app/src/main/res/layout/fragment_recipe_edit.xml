<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AddFragment">

    <EditText
        android:id="@+id/edit_rec_title"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Title"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/edit_rec_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_title"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/edit_rec_image"
        android:layout_width="231dp"
        android:layout_height="234dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="49dp"
        android:src="@drawable/picture_food"
        app:layout_constraintBottom_toTopOf="@+id/fail_to_save_recommend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_rec_takePhoto_btn"
        app:layout_constraintTop_toBottomOf="@+id/edit_rec_description" />

    <Button
        android:id="@+id/edit_rec_takePhoto_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="249dp"
        android:text="Take Photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit_rec_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_description" />

    <TextView
        android:id="@+id/new_title"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="49dp"
        android:defaultValue="@null"
        android:text="Title:"
        android:textColor="#FAFAFA"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/new_location"
        app:layout_constraintEnd_toStartOf="@+id/edit_rec_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/new_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="54dp"
        android:defaultValue="@null"
        android:text="Location:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/new_description"
        app:layout_constraintEnd_toStartOf="@+id/edit_rec_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_title" />

    <TextView
        android:id="@+id/new_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="25dp"
        android:defaultValue="@null"
        android:text="description"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edit_rec_takePhoto_btn"
        app:layout_constraintEnd_toStartOf="@+id/edit_rec_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_location" />

    <EditText
        android:id="@+id/edit_rec_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Location"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/edit_rec_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_location"
        app:layout_constraintTop_toBottomOf="@+id/edit_rec_title" />

    <EditText
        android:id="@+id/edit_rec_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Description"
        android:textColor="#FFFCFC"
        app:layout_constraintBottom_toTopOf="@+id/edit_rec_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_description"
        app:layout_constraintTop_toBottomOf="@+id/edit_rec_location" />

    <Button
        android:id="@+id/edit_rec_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="56dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fail_to_save_recommend" />

    <TextView
        android:id="@+id/fail_to_save_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="14dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edit_rec_save_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_rec_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
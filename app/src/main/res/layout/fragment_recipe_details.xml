<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture_food"
    tools:context=".RecipeDetailsFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/rec_details_image"
        android:layout_width="290dp"
        android:layout_height="238dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_details_location"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/rec_details_title"
        android:layout_width="372dp"
        android:layout_height="32dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="78dp"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rec_details_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rec_details_location"
        android:layout_width="163dp"
        android:layout_height="34dp"
        android:layout_marginTop="92dp"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="#B516B5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rec_details_description"
        android:layout_width="287dp"
        android:layout_height="24dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="60dp"
        android:text="description"
        android:textColor="#E80C0C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rec_details_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rec_details_close_btn"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="16dp"
        android:text="Back"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_details_image" />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="67dp"
        android:layout_height="45dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="12dp"
        android:text="Edit"
        android:visibility="visible"
        app:backgroundTint="#0C0C0C"
        app:iconTint="#CD0D0D"
        app:layout_constraintBottom_toTopOf="@+id/rec_details_close_btn"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_details_image" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="10dp"
        android:text="Delete"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/rec_details_close_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_btn"
        app:layout_constraintTop_toBottomOf="@+id/rec_details_image" />

    <TextView
        android:id="@+id/rec_details_recommendId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="166dp"
        android:text="id"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/rec_details_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_details_location" />
</androidx.constraintlayout.widget.ConstraintLayout>